# 設備與效能
DEVICE=cuda
FP16=true
MAX_CONCURRENCY=2

# 引擎選擇 (修改後重啟即切換)
TTS_ENGINE=xtts        # xtts | openvoice | bark
VC_ENGINE=rvc          # rvc | sovits

# 共享快取設定 (重要！)
AI_CACHE_ROOT=/your/ai/warehouse/path

# 自動衍生路徑 (通常不需修改)
OUTPUT_DIR=
SPEAKER_DIR=
MODELS_TTS_DIR=
MODELS_VC_DIR=

# API 設定
API_PREFIX=/api/v1
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# 音訊處理
TARGET_LUFS=-16.0
SAMPLE_RATE=22050